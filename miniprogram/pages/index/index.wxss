/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

.header {
  text-align: center;
  padding: 60rpx 20rpx 40rpx;
  color: #fff;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.action-bar {
  display: flex;
  justify-content: flex-end;
  padding: 0 20rpx 20rpx;
}

.history-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #fff;
  font-size: 28rpx;
}

.patient-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.patient-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.patient-card:active {
  transform: scale(0.98);
}

.patient-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.patient-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.patient-category {
  background: #667eea;
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.patient-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.patient-symptoms {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.symptom-tag {
  background: #f0f0f0;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.patient-footer {
  display: flex;
  justify-content: flex-end;
}

.start-chat {
  color: #667eea;
  font-size: 28rpx;
  font-weight: 500;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #fff;
  font-size: 28rpx;
}
